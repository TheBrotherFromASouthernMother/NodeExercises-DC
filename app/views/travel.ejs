    <script type="text/javascript">
        let travelImages = document.querySelectorAll(".travel-review-image");
        let travelTitles = document.querySelectorAll(".travel-review-title");
        let travelReviewDescriptions = document.querySelectorAll(".travel-review-description");
        let travelReviewDates = document.querySelectorAll(".travel-review-date");

        let xhr = new XMLHttpRequest();

        xhr.onreadystatechange = () => {
          if (xhr.readyState === 4) {
             if (xhr.status === 200) {
               let data = JSON.parse(xhr.responseText)
               updateUI(data, 5)
            }
          }
        }

        xhr.open("GET", "/api")
        xhr.send();


        function updateUI(data, numberOfElements) {
          for (let i = 0; i < numberOfElements; i++) {
            travelTitles[i].innerHTML = data[i].title;
            travelReviewDescriptions[i].innerHTML = data[i].description;
            travelImages[i].src = data[i].imageUrl;
            travelReviewDates[i].innerHTML = data[i].date;
          }
          console.log("done")
        }
    </script>
