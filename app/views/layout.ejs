<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <style media="screen">
    html, body {
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      color: white;
      width: 100%;
      height: 100%;
      background: linear-gradient(to right, rgb(84, 46, 177), rgb(32, 146, 240));
    }

    #alert {
      display: none;
    }
    </style>
  </head>
  <body>
    <div class="main">
      <a href="#" id="delete-user" style="color: white; text-decoration: none;"> Delete User</a>
          <h1 id= "alert"> User deleted... </h1>
    </div>

    </div>



    <script type="text/javascript">
      let deleteUser = document.querySelector("#delete-user");
      let alert = document.querySelector("#alert")
      deleteUser.addEventListener("click", () => {
        let authenticate = prompt("Please type in the username you would like to delete: ")

        let xhr = new XMLHttpRequest();

        xhr.onreadystatechange = () => {
          alert.style.display = "block";

        }

        xhr.open("DELETE", `/userPage/${authenticate}`)
        xhr.send();
      })


    </script>
  </body>
</html>
